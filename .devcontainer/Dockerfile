FROM rocker/r-ver:4.4.2

# Instalar dependências do sistema
RUN apt-get update && apt-get install -y \
    build-essential \
    libcurl4-openssl-dev \
    libssl-dev \
    libxml2-dev \
    libgit2-dev \
    python3-pip \
    python3-dev \
    python3-venv \
    git \
    git-lfs \
    curl \
    vim \
    sudo \
    gnupg2 \
    apt-transport-https \
    ca-certificates \
    dirmngr \
    && git lfs install \
    && rm -rf /var/lib/apt/lists/*

# Criar link simbólico para python
RUN ln -sf /usr/bin/python3 /usr/local/bin/python

# Instalar Jupyter e ferramentas Python (usando --break-system-packages é seguro em containers)
RUN pip3 install --no-cache-dir --break-system-packages \
    jupyterlab \
    notebook \
    ipykernel \
    polars>=1.0.0 \
    radian \
    stemgraphic \
    matplotlib \
    seaborn \
    pandas \
    numpy \
    scipy \
    scikit-learn \
    plotly \
    pyarrow \
    clickhouse-driver \
    clickhouse-connect \
    poppler-utils

# Instalar pacotes R necessários
RUN R -e "install.packages(c('IRkernel', 'languageserver'), repos='https://cloud.r-project.org', Ncpus=2)"

# Registrar o kernel R no Jupyter
RUN R -e "IRkernel::installspec(user = FALSE)"

# Criar usuário vscode (compatível com Codespaces)
RUN useradd -m -s /bin/bash vscode && \
    usermod -aG sudo vscode && \
    echo "vscode ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Configurar diretório de trabalho
WORKDIR /workspaces

# Mudar para usuário vscode
USER vscode
